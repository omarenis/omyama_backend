{% extends '/dashboard/events/template.twig' %}
{% block formStep %}
    <div class="multisteps-form__content">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Launch demo modal
        </button>
    </div>
    <form class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable w-100 align-self-center">
            <div class="modal-content" style="min-width: 1000px !important">
                <div class="modal-header">
                    <h5 class="font-weight-bolder">Speaker Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 row mt-3">
                            <div class="d-flex">
                                <label>First Name</label>
                                <input class="multisteps-form__input form-control" type="text"
                                       placeholder="First Name"/>
                            </div>
                            <div class="">
                                <label>Last Name</label>
                                <input class="multisteps-form__input form-control" type="text"
                                       placeholder="Last Name"/>
                            </div>

                            <div class="">
                                <label>Job</label>
                                <input class="multisteps-form__input form-control" type="text"
                                       placeholder="Job title"/>
                            </div>
                            <div class="row">
                                <label for="contribution" class="col-md-4 col-sm-12">Contribution</label>
                                <div class="col-md-8 col-sm-12">
                                    <select id="contribution" class="form-control" name="contribution">
                                        <option value="speaker">Speaker</option>
                                        <option value="speaker">Speaker</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                            <label class="mt-4 form-label">Add Speaker Picture </label>
                            <div class="dropzone form-control h-100" id="upload">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 ">
                        <label class="mt-4">Description</label>
                        <p class="form-text text-muted text-xs ms-1 d-inline">
                            (optional)
                        </p>
                        <div id="edit-deschiption" class="h-50">
                            <p>Some initial <strong>bold</strong> text</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <label>Email Account</label>
                            <input class="multisteps-form__input form-control" type="email"
                                   placeholder="Email"/>
                        </div>
                        <div class="col-12 mt-3">
                            <label>Github Account</label>
                            <input class="multisteps-form__input form-control" type="text"
                                   placeholder="https://..."/>
                        </div>
                        <div class="col-12 mt-3">
                            <label>Linkedin Account</label>
                            <input class="multisteps-form__input form-control" type="text"
                                   placeholder="https://..."/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script type="text/javascript">

    </script>
{% endblock %}
