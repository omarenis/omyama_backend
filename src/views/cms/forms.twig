{% macro cardForm(_object) %}
    <form class="row formUpload" method="post" enctype="multipart/form-data"
          action="/dashboard/events/blocks/{{ _object is defined ? _object.id : 'create' }}">
        <div class="mx-auto">
            <div class="card card-body mt-4">
                <p class="text-sm mb-0">{{ _object is defined ? 'update': 'create' }}
                    your card</p>
                <hr class="horizontal dark my-3">
                <div class="row">
                    <div class="col-md-6 col-sm-12" style="display: flex; flex-direction: column">
                        <fieldset class="form-group">
                            <legend></legend>
                            <label for="title" class="form-label">Style Card</label>
                            <select class="form-control" name="choices-category" id="title">
                                <option value="horizontal" selected="">Card horizontale</option>
                                <option value="vertical">Card verticale</option>
                                <option value="overlay">Overlay</option>
                            </select>
                        </fieldset>
                    </div>
                    <div class=" col-md-6 col-sm-12 form-group d-flex flex-column ">
                        <div class="d-flex justify-content-center imageOrFileUpload">
                        <img class="img-fluid min-height-200 imgUpload"
                             src="http://localhost:3000/{{ _object is defined ?  _object.imagePath : '' }}"
                             id="imageLabel" alt="card_image_or_video"/>
                        </div>
                        <label class="btn btn-info w-100" for="image">
                            upload image or video
                            <input type="file" onchange="uploadImage(this)" accept="image/*" id="image" name="image" style="display: none" />
                        </label>
                    </div>
                </div>


                <input name="description" id="description" style="display: none" value=""/>
                <label class="mt-4" for="description">Content</label>
                <div class="min-height-300" id="editor">
                    {{ _object is defined ? _object.description : '' }}
                </div>
            </div>
            <hr class="horizontal dark my-3">
            <label class="btn btn-info w-100" for="image">
                +
                <input type="file" accept="image/*" id="image" name="image" style="display: none"/>
            </label>
        </div>
    </form>
{% endmacro %}
